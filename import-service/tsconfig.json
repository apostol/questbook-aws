{
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "ES2020",
    "preserveConstEnums": true,
    "noEmit": true,
    "module": "esnext",
    "strict": true,
    "lib": ["ESNext"],
    "outDir": "lib",
    "isolatedModules": true, 
    "resolveJsonModule": true,
    "paths": {
      "@functions/*": ["src/functions/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["src/**/*.ts", "serverless.ts"],
  "exclude": [
    "node_modules",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "**/*.test.ts",
    "**/*.json"
  ]
}
